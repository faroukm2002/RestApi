{
  "compilerOptions": {
    "noImplicitAny": true,                         
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "database/**/*", 
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}
